	<!-- class="org.springframework.jms.connection.CachingConnectionFactory" 
		depends-on="amqConnectionFactory"> -->
	<!-- <constructor-arg index="0" type="ConnectionFactory" ref="amqConnectionFactory" 
		/> -->
